
input, button, textarea, select, option {
    &:focus {
        outline: none;
    }

    &::-moz-focus-inner {
        border: 0;
    }
}

input, button, textarea, select, option {
    padding: 0;
    appearance: none;
    -moz-appearance: none;
    /* 在 WebKit/Blink 中可用的部分值 */
    -webkit-appearance: none;
    -webkit-appearance: none;
}

ul, ol {
    list-style: none;
    padding: 0;
}
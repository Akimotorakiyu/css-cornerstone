.dropdown {
    &>* {
        animation-name: shows;
        animation-duration: var(--std-animation-duration);
        animation-timing-function: var(--std-animation-timing-function);
    }
}

@keyframes shows {
    0% {
        opacity: 0;
        transform: translateY(-100%);
    }

    100% {
        opacity: 1;
        transform: translateY(0%);
    }
}
